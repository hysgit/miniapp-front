.container {
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.month-info {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
}

.month-text {
  font-size: 28rpx;
  color: #666;
}

.add-btn {
  background-color: #007AFF;
  color: white;
  font-size: 28rpx;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 30rpx;
  border-radius: 32rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.exercise-list {
  width: 100%;
}

.exercise-item {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.exercise-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.exercise-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.exercise-type {
  font-size: 24rpx;
  color: #666;
  padding: 4rpx 16rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
}

.exercise-stats {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stats-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.exercise-status {
  text-align: right;
  font-size: 28rpx;
  color: #999;
}

.exercise-status.done {
  color: #007AFF;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #666;
}

.empty-state {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #666;
}

.empty-state text {
  display: block;
  margin-bottom: 30rpx;
  font-size: 28rpx;
}

.empty-state .add-btn {
  display: inline-block;
  margin-top: 20rpx;
}
