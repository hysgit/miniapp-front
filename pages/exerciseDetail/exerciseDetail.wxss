.container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 30rpx;
  background-color: #ffffff;
}

.exercise-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  text-align: center;
}

.button-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: 500;
  border: none;
  background-color: #4CAF50;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

/* 历史记录按钮样式 */
.btn.history {
  background-color: #1976D2;  /* 蓝色 */
}

/* 按钮点击效果 */
.btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}
