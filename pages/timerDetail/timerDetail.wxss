.container {
  padding: 20px;
}

.timer-name {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
}

.record-list {
  width: 100%;
}

.record-item {
  background: #fff;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 10px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.record-info {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.time-info {
  display: flex;
  flex-direction: column;
  gap: 5px;
  color: #666;
  font-size: 14px;
}

.duration {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 16px;
  font-weight: 500;
}

.stop-btn {
  font-size: 14px;
  padding: 4px 12px;
  background: #ff4d4f;
  color: white;
  border-radius: 4px;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background: #fff;
  border-radius: 10px;
  overflow: hidden;
}

.modal-header {
  padding: 15px;
  text-align: center;
  font-size: 16px;
  border-bottom: 1px solid #eee;
}

.modal-body {
  padding: 20px;
  text-align: center;
}

.modal-footer {
  display: flex;
  padding: 10px;
  border-top: 1px solid #eee;
}

.modal-footer button {
  flex: 1;
  margin: 0 5px;
}
