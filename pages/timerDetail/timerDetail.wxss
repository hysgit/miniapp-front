.container {
  padding: 20px;
}

.timer-name {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
}

.record-list {
  width: 100%;
}

.record-item {
  background: #fff;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 10px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.record-info {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.time-info {
  display: flex;
  flex-direction: column;
  gap: 5px;
  color: #666;
  font-size: 14px;
}

.duration {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 16px;
}

.stop-btn {
  display: inline-block;
  min-width: fit-content;
  width: auto !important;
  padding: 8px 20px;
  font-size: 14px;
  color: #fff;
  background-color: #ee584e;
  border-radius: 4px;
  border: none;
  margin: 0;
  line-height: 1.2;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
}

.modal-body {
  padding: 20px;
  text-align: center;
  font-size: 16px;
}

.modal-footer {
  display: flex;
  border-top: 1px solid #eee;
}

.modal-btn {
  flex: 1;
  padding: 12px 0;
  text-align: center;
  font-size: 16px;
}

.modal-btn-cancel {
  color: #333;
  border-right: 1px solid #eee;
}

.modal-btn-confirm {
  color: #ee584e;
  font-weight: 500;
}
