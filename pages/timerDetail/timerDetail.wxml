<view class="container">
  <view class="timer-name">{{timer.name}}</view>
  <view class="record-list">
    <view wx:for="{{records}}" wx:key="id" class="record-item">
      <view class="record-info">
        <view class="time-info">
          <text>开始：{{item.displayStartTime}}</text>
          <text wx:if="{{item.displayStopTime}}">结束：{{item.displayStopTime}}</text>
        </view>
        <view class="duration">
          <text>{{item.duration}}</text>
          <view wx:if="{{!item.stopTime}}" class="stop-btn" bindtap="showStopConfirm" data-id="{{item.id}}">结束计时</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 确认结束计时弹窗 -->
  <view class="modal" wx:if="{{showConfirmModal}}">
    <view class="modal-mask"></view>
    <view class="modal-content">
      <view class="modal-body">确定要结束计时吗？</view>
      <view class="modal-footer">
        <view class="modal-btn modal-btn-cancel" bindtap="hideStopConfirm">取消</view>
        <view class="modal-btn modal-btn-confirm" bindtap="stopTimer">确定</view>
      </view>
    </view>
  </view>
</view>
