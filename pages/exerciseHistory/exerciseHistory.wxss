@import "/style/iconfont.wxss";

.container {
  padding: 20rpx;
  background-color: #f8f8f8;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.month-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.month-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.month-btn:active {
  background-color: #f5f5f5;
}

.month-btn-hover {
  background-color: #f5f5f5;
}

.arrow-text {
  font-size: 32rpx;
  color: #666;
  font-weight: bold;
}

.month-picker {
  flex: 1;
  background-color: #fff;
  padding: 15rpx;
  margin: 0 20rpx;
  text-align: center;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.record-list {
  width: 100%;
}

.record-item {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 120rpx;
}

.record-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-date {
  font-size: 28rpx;
  color: #666;
}

.record-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 100rpx;
}

/* 表格样式 */
.records-table {
  width: 100%;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
}

.table-header {
  display: flex;
  background-color: #f8f8f8;
  font-weight: bold;
  border-bottom: 1rpx solid #eee;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.table-row:last-child {
  border-bottom: none;
}

.cell {
  padding: 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.cell.date {
  width: 180rpx;
  flex-shrink: 0;
}

.cell.total {
  width: 160rpx;
  flex-shrink: 0;
}

.cell.records {
  flex: 1;
  overflow-x: auto;
  white-space: nowrap;
}

.record-item text {
  font-size: 24rpx;
  color: #666;
}

.record-item text:first-child {
  margin-bottom: 4rpx;
  color: #333;
}

.daily-record {
  background-color: white;
  margin-bottom: 15rpx;
  padding: 15rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.daily-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.date {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.total-duration {
  font-size: 28rpx;
  color: #666;
}

.records-scroll {
  margin-top: 20rpx;
  white-space: nowrap;
}

.records-container {
  display: flex;
  margin-top: 20rpx;
  gap: 20rpx;
}

.record-box {
  flex: 1;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #eee;
}

.record-box.has-record {
  background-color: #e6f3ff;
  border-color: #91caff;
}

.duration {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.date-cell {
  width: 180rpx;
  flex-shrink: 0;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.total-cell {
  width: 160rpx;
  flex-shrink: 0;
  font-size: 28rpx;
  color: #666;
  padding: 0 20rpx;
}

.record-cells {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 15rpx;
  margin-top: 5rpx;
}

.record-cell {
  height: 60rpx;
  background-color: #f8f8f8;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #eee;
  font-size: 24rpx;
  color: #999;
}

.record-cell.has-record {
  background-color: #e6f3ff;
  border-color: #91caff;
  color: #333;
}

.record-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.record-main {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.record-date {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  min-width: 60rpx;
}

.record-duration {
  font-size: 28rpx;
  color: #666;
}

.record-count {
  font-size: 24rpx;
  color: #999;
}
