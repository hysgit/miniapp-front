.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background-color: #f8f8f8;
}

.exercise-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  text-align: center;
}

.button-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  padding: 0 40rpx;
}

.btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

.check-in-btn {
  background-color: #4CAF50;
  color: white;
}

.history-btn {
  background-color: #2196F3;
  color: white;
}
