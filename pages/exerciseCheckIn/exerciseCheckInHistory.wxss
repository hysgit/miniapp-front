.container {
  padding: 20rpx;
}

.month-picker {
  width: 100%;
  height: 80rpx;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #333;
}

.picker-arrow {
  margin-left: 10rpx;
  color: #999;
  font-size: 24rpx;
}

/* 月度统计 */
.monthly-stats {
  background-color: white;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

/* 日历头部 */
.calendar-header {
  display: flex;
  padding: 20rpx 0;
  background-color: #f8f8f8;
  border-radius: 10rpx 10rpx 0 0;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

/* 日历主体 */
.calendar-body {
  background-color: white;
  border-radius: 0 0 10rpx 10rpx;
}

.calendar-row {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.calendar-row:last-child {
  border-bottom: none;
}

.calendar-cell {
  flex: 1;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
  border-right: 1rpx solid #f0f0f0;
  position: relative;
  background-color: #e8f5e9;  /* 默认淡绿色背景（0次） */
}

.calendar-cell:last-child {
  border-right: none;
}

.cell-date {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.cell-count {
  font-size: 24rpx;
  color: #666;
}

.other-month {
  background-color: #fafafa !important;
}

.other-month .cell-date {
  color: #999;
}

/* 打卡次数颜色渐变 */
.calendar-cell[data-count="1"] {
  background-color: #ffebee;  /* 最淡的红色 */
}

.calendar-cell[data-count="2"] {
  background-color: #ffcdd2;
}

.calendar-cell[data-count="3"] {
  background-color: #ef9a9a;
}

.calendar-cell[data-count="4"] {
  background-color: #e57373;
}

.calendar-cell[data-count="5"] {
  background-color: #ef5350;
}

.calendar-cell[data-count="6"] {
  background-color: #f44336;
}

.calendar-cell[data-count="7"] {
  background-color: #e53935;
}

.calendar-cell[data-count="8"] {
  background-color: #d32f2f;
}

.calendar-cell[data-count="9"] {
  background-color: #c62828;
}

.calendar-cell[data-count="10"] {
  background-color: #b71c1c;  /* 最深的红色 */
}

/* 加载提示 */
.loading {
  display: flex;
  justify-content: center;
  padding: 40rpx;
  color: #666;
}
