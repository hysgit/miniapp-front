.page {
  min-height: 100vh;
  background-color: #f0f0f0;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 顶部背景 */
.header-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 260rpx;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  border-radius: 0 0 40rpx 40rpx;
  z-index: 1;
}

/* 顶部内容区 */
.header {
  position: relative;
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 2;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  border-radius: 0 0 40rpx 40rpx;
}

.header-content {
  color: white;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
  display: block;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.add-btn {
  width: auto;
  padding: 0 10rpx;
  background-color: white;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.add-icon {
  color: #4CAF50;
  font-size: 48rpx;
  font-weight: 300;
}

/* 统计卡片 */
.stats-card {
  position: relative;
  margin: 0 30rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 2;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 2rpx;
  background-color: #eee;
  margin: 10rpx 0;
}

/* 待办事项列表 */
.todo-list {
  margin-top: 280rpx;
  padding: 20rpx;
}

.todo-item {
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
}

.todo-content {
  flex: 1;
  padding: 24rpx;
  display: flex;
  align-items: flex-start;
}

.checkbox {
  margin-right: 20rpx;
  padding-top: 6rpx;
}

.checkbox-inner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.checkbox-inner.checked {
  background-color: #4CAF50;
  border-color: #4CAF50;
}

.todo-info {
  flex: 1;
}

.title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.todo-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  margin-right: 16rpx;
}

.completed-text {
  text-decoration: line-through;
  color: #999;
}

.priority-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-weight: normal;
}

.priority-0 {
  background-color: #e8f5e9;
  color: #4caf50;
}

.priority-1 {
  background-color: #fff3e0;
  color: #ff9800;
}

.priority-2 {
  background-color: #ffebee;
  color: #f44336;
}

.todo-description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.todo-footer {
  display: flex;
  align-items: center;
}

.due-date {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.icon-mini {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.swipe-actions {
  display: flex;
  align-items: center;
}

.delete-btn {
  width: 100rpx;
  height: 100%;
  background-color: #ff4d4f;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 16rpx 16rpx 0;
}

.icon-delete {
  width: 40rpx;
  height: 40rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 40rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #888;
}

.empty-subtext {
  font-size: 26rpx;
  color: #999;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.modal.show {
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  padding: 10rpx;
}

.icon-close {
  width: 32rpx;
  height: 32rpx;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.input {
  width: 100%;
  height: 88rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  height: 180rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.picker-content {
  display: flex;
  align-items: center;
  height: 88rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
}

.priority-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.icon-arrow {
  width: 32rpx;
  height: 32rpx;
  margin-left: auto;
}

.modal-footer {
  margin-top: 40rpx;
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.confirm {
  background-color: #4CAF50;
  color: white;
}
