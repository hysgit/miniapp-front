.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
  display: flex;
  flex-direction: column;
}

.tab-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-bottom: 1px solid #eee;
  z-index: 100;
}

.tab {
  position: relative;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: #666;
}

.tab.active {
  color: #333;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -1px;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #333;
  border-radius: 2rpx;
}

.list-container {
  flex: 1;
  margin-top: 88rpx;
  padding: 20rpx;
}

.todo-list {
  padding: 10rpx 0;
}

.todo-item {
  position: relative;
  background: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
}

.checkbox {
  flex-shrink: 0;
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-top: 6rpx;
}

.checkbox.checked {
  background-color: #4CAF50;
  border-color: #4CAF50;
}

.todo-content {
  flex: 1;
  margin-right: 20rpx;
}

.todo-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.todo-info {
  font-size: 24rpx;
  color: #999;
}

.description {
  display: block;
  margin-bottom: 8rpx;
  color: #666;
}

.time-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #888;
  margin-top: 4rpx;
}

.create-time {
  white-space: nowrap;
}

.right-times {
  display: flex;
  gap: 16rpx;
}

.due-date {
  color: #ff9800;
  white-space: nowrap;
}

.complete-time {
  color: #4CAF50;
  white-space: nowrap;
}

.priority-tag {
  flex-shrink: 0;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  height: fit-content;
}

.priority-0 {
  background-color: #f5f5f5;
  color: #666;
}

.priority-1 {
  background-color: #fff3e0;
  color: #ff9800;
}

.empty-state {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: calc(40rpx + env(safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  background: #4CAF50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  z-index: 100;
}

.add-icon {
  color: #fff;
  font-size: 60rpx;
  font-weight: 300;
}
