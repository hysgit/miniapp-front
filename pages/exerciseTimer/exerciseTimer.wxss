.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f8f8f8;
}

.exercise-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  text-align: center;
}

.timer-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30px;
}

.timer-display {
  font-size: 48px;
  font-weight: bold;
  color: #333;
  font-family: monospace;
  margin-bottom: 60rpx;
}

.start-btn {
  width: 200px;
  height: 50px;
  background-color: #4CAF50;
  color: white;
  border-radius: 25px;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.stop-btn {
  width: 200px;
  height: 50px;
  background-color: #f44336;
  color: white;
  border-radius: 25px;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-buttons {
  display: flex;
  gap: 20px;
  margin-top: 40rpx;
}

.save-btn {
  width: 140px;
  height: 50px;
  background-color: #4CAF50;
  color: white;
  border-radius: 25px;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  width: 140px;
  height: 50px;
  background-color: #9e9e9e;
  color: white;
  border-radius: 25px;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
