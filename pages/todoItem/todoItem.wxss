.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form-group {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  box-sizing: border-box;
}

.placeholder {
  color: #999;
}

.datetime-picker {
  display: flex;
  gap: 20rpx;
}

.datetime-picker .picker {
  flex: 1;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.add-btn {
  color: #0066cc;
  font-size: 28rpx;
}

/* 标签样式 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.tag {
  background-color: #e6f3ff;
  color: #0066cc;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.tag-delete {
  margin-left: 10rpx;
  font-size: 32rpx;
  line-height: 1;
}

.common-tag {
  background-color: #f5f5f5;
  color: #666;
}

/* 附件样式 */
.attachments-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.attachment-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.attachment-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

.attachment-info {
  flex: 1;
  margin-right: 20rpx;
}

.attachment-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.attachment-size {
  font-size: 24rpx;
  color: #999;
}

.delete-btn {
  color: #ff4d4f;
  font-size: 28rpx;
}

/* 评论样式 */
.comments-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.comment-item {
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.comment-user {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.comment-content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

/* 按钮样式 */
.button-group {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.btn-primary {
  background-color: #0066cc;
  color: #fff;
}

/* 弹出层样式 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.popup-content {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  transform: translateY(100%);
  transition: transform 0.3s;
  z-index: 1001;
}

.popup-show {
  transform: translateY(0);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
}

.time-picker {
  width: 100%;
  height: 400rpx;
}

.popup-footer {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}
